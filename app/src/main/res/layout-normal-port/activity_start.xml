<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="be.buri.battleships.StartActivity">

    <Button
        android:id="@+id/buttonHostGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:enabled="true"
        android:onClick="hostGame"
        android:text="@string/host_game"
        android:textSize="40sp" />

    <Button
        android:id="@+id/buttonConnectToHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonHostGame"
        android:enabled="true"
        android:onClick="joinGame"
        android:text="@string/connect_to_host"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonConnectToHost"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/ship_on_the_wave" />
</RelativeLayout>
